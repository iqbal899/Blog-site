<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title><%= blog.title %></title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" width="700px" />
      <pre class="mt-3"><%= blog.body %></pre>

      <% if (user && blog.createdBy._id.toString() === user._id.toString()) { %>
        <form action="/blog/delete/<%= blog._id %>" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-danger mt-2"
                  onclick="return confirm('Are you sure you want to delete this blog?')">
            Delete Blog
          </button>
        </form>
      <% } %>
    </div>

    <div class="container mt-4">
      <img src="<%= blog.createdBy.profileImageURL %>" width="50px" />
      <strong><%= blog.createdBy.fullName %></strong>
    </div>

    <div class="container mt-3">
      <h2>Comments (<%= comments.length %>)</h2>

      <% if (user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="POST">
          <div class="mb-3">
            <input type="text" name="content" class="form-control" placeholder="Enter your comment" />
            <button class="btn btn-sm btn-primary mt-2" type="submit">Add</button>
          </div>
        </form>
      <% } %>

      <div class="mt-3">
        <% comments.forEach(comment => { %>
          <div class="mb-2">
            <img src="<%= comment.createdBy.profileImageURL %>" width="50px" />
            <strong><%= comment.createdBy.fullName %></strong>
            <pre><%= comment.content %></pre>
          </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
